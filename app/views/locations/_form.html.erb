<h1><%= @location.id ? 'Edit Location' : 'Create Location' %></h1>
<hr/>
<%= form_with(model: [ @trip, @location], local: true, class: "ui form") do |f| %>
<%= f.label :name %>
<%= f.text_field :name, required: true, autofocus: true %>
<br/>
<%= f.label :days %>
<%= f.text_field :days %>
<br/>
<br/>
<hr/>
<%= f.submit nil, class: "ui inverted purple button" %>
<% end %>
