<%= render "layouts/navbar" %>
<br /> 
<h1 class="ui purple header"><%= @trip.name %></h1>
<h3>&#127758;Location: <%= @location.name %></h3>
<h3>&#128198;Days: <%= @location.days %></h3>
<%= 
  if @location.address == nil
    link_to "New address", new_location_address_path(@location)
  else
    render "addresses/address" 
  end
 %>

<br/>
<hr/>
<%= link_to "Edit Location", edit_trip_location_path([@trip, @location]) %> |
<%= link_to "Delete Location", [@trip, @location], method: :delete %> |
<%= link_to "Back To Locations", trip_path(@trip) %>
