<h1><%= @trip.name %> Trip</h1>
<p><%= link_to "Edit", edit_trip_path(@trip) %> | <%= link_to "Delete", trip_path(@trip), method: :delete %>
<div>
<p><%= @trip.start_date %> - <%= @trip.end_date %></p>
</div>
<hr>
<ul class="ui animated list">
<% @trip.locations.each do |location| %>
    <div class="item">
    <li>
        <div class="header">
        <h3><%= link_to location.name, trip_location_path(@trip, location) %></h3>
        </div>
    </li>
    </div>
<% end %>
</ul>
<%= link_to "Add Location", new_trip_location_path(@trip) %>